Ti.UI.setBackgroundColor = "#fff";

var mainWindow = Ti.UI.createWindow({
	backgroundColor: "#999999"
});

var head = Ti.UI.createView({
	backgroundColor: "#666666",
	top: 0,
	height: 75,
	width: "100%"
});

var border = Ti.UI.createView({
	backgroundColor: "fff",
	top: head.height + 1,
	height: 5,
	width: "100%"
});

mainWindow.open();
mainWindow.add(head, border);
