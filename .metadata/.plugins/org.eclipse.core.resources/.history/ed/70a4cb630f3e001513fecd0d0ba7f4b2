Ti.UI.setBackgroundColor("#000");

var window = Ti.UI.createWindow({
	backgroundColor: "#fff"
});

window.open();



var view = Ti.UI.createView({
	backgroundColor: "#000000",
	borderRadius: 5,
	borderWidth: 1,
	width: 200,
	height: 150
});

window.add(view);

var text = Ti.UI.createLabel({
	text: "Yo yo what's cracking",
	color: "#fff",
	font: {fontSize: 14, fontFamily: "Courier"}
	
});

view.add(text);
