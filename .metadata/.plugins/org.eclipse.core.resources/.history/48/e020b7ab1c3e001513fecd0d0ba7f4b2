var changeView = function(){
	buttonView = Ti.UI.createView({
		height: 50,
		width: 75,
		left: 20,
		borderRadius: 5,
		top: 330,
		color: "blue"
	});
	buttonView2 = Ti.UI.createView({
		height: 50,
		width: 75,
		right: 20,
		borderRadius: 5,
		top: 330,
		color: "blue"
	});
};


buttonView.addEventListener("click", changeView);





